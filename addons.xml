<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.datho.vpn" name="Datho VPN" version="0.8.1" provider-name="Datho-Digital">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests" version="1.1.0"/>
    <import addon="script.module.requests2" version="2.2.1"/>
  </requires>

  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en"></summary>
    <description lang="en">The world's first VPN service designed for XBMC.  Visit http://www.dathovpn.com to sign-up for a no risk 3-day trial.  Additional software is required for some OS.  For more information, please visit http://www.dathovpn.com .  Please note: This add-on does not support iOS.</description>
    <platform>all</platform>
    <language>en</language>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <forum></forum>
    <website>http://www.dathovpn.com</website>
    <source>https://github.com/martincad/xbmc-repo</source>
    <email></email>
  </extension>
    <extension point="xbmc.addon.repository" name="Datho XBMC Addon Repository">
        <info compressed="false">http://raw.github.com/datho/datho-xbmc-repo/master/addons.xml</info>
        <checksum>http://raw.github.com/datho/datho-xbmc-repo/master/addons.xml.md5</checksum>
        <datadir zip="true">http://raw.github.com/datho/datho-xbmc-repo/master/repo/</datadir>
    </extension>


</addon>



<addon id="repository.datho.xbmc-plugins" name="datho Add-on Repository" version="0.8.0" provider-name="datho-digital">
    <extension point="xbmc.addon.repository" name="datho Add-on Repository">
        <info compressed="false">http://raw.github.com/datho/datho-xbmc-repo/master/addons.xml</info>
        <checksum>http://raw.github.com/datho/datho-xbmc-repo/master/addons.xml.md5</checksum>
        <datadir zip="true">http://raw.github.com/datho/datho-xbmc-repo/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from datho Repository</summary>
		<description>Add-ons for XBMC</description>
		<disclaimer>by datho</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
